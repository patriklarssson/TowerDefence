{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		},
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true
	},
	"include": [
		"src/*",
		"src/**/*",
	],

}